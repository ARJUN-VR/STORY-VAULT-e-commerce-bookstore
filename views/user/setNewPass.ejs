<%-include('../layouts/headerforlogin.ejs') %>


    <title>Centered Input Boxes</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .container2 {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50vh;
        }
    </style>
</head>
<body>
    <form action="/set-pass" method="post">
        <div class="container2">
            <div class="d-flex flex-column align-items-center">
                <input type="text" class="form-control mb-3" placeholder="enter new password" name="pass1">
                <input type="text" class="form-control" placeholder="re-enter password" name="pass2"><br>
                <%=(typeof message!=='undefined') ? message : ""%>
                <button type="submit">set password</button>
            </div>
        </div>
    </form>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

