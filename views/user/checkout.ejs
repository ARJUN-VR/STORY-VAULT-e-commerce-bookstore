      const cashOnDeliveryForm = document.getElementById('orderform-cash');
      const paypalForm = document.getElementById('orderform-paypal');
      const walletForm=document.getElementById('orderform-wallet')
      
      const cashOnDeliveryOption = document.getElementById('f-option5');
      const paypalOption = document.getElementById('f-option6');
      const walletOption = document.getElementById('f-option7')
  
      cashOnDeliveryOption.addEventListener('click', () => {
         
          walletForm.style.display='none'
          paypalForm.style.display = 'none';
          cashOnDeliveryForm.style.display = 'block';
         
      });
  
      paypalOption.addEventListener('click', () => {
          cashOnDeliveryForm.style.display = 'none';
          paypalForm.style.display = 'block';
          walletForm.style.display='none'
      });

      walletOption.addEventListener('click',()=>{
        cashOnDeliveryForm.style.display = 'none';
          paypalForm.style.display = 'none';
          walletForm.style.display='block'

      })
  </script>
  


</section>


<script>
  function coupon(){
  const coupon=document.getElementById('coupon').value
    $.ajax({
        url: '/coupon-discount',
        method: 'POST',
        data:{coupon:coupon},
  
        success: (response) => {
          if (response.status==true) {
            const newtotal=response.newtotal
            const totalcart=document.getElementById('total')
            totalcart.textContent='₹'+newtotal

            document.getElementById('whole').style.display='none';
            document.getElementById('couponLabel').style.display='inline';
           

          }else if(response.status=='nominbal'){
            document.getElementById('whole').style.display='none';
            document.getElementById('couponLabel2').style.display='inline';
          }else if(response.status=='expired'){
            document.getElementById('whole').style.display='none';
            document.getElementById('couponLabel3').style.display='inline';

          }else if(response.status==false){
            document.getElementById('whole').style.display='none';
            document.getElementById('couponLabel4').style.display='inline';

          }else if(response.status=='unvalid'){
            document.getElementById('whole').style.display='none';
            document.getElementById('couponLabel5').style.display='inline';
          }
        }
        
      })
  
  }
</script>

