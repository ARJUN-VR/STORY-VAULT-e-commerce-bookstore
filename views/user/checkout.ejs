                    .card:hover {
        box-shadow: 0px 8px 10px rgba(0, 0, 0, 0.2); /* Change the shadow on hover */
        transform: translateY(-4px); /* Add a slight lift effect on hover */
        background-color: rgba(0, 0, 0, 0.1);
    }
