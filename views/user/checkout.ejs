                                <h6>Name: <%= item.phone %></h6>
                                <h6>Email: <%= item.email %></h6>
                                <h6>Phone: <%= item.phone %></h6>
                                <h6>Street: <%= item.street %></h6>
                                <h6>House: <%= item.house %></h6>
