  <style>
    .banner{
        width: 100%;
        height: 100vh;
    }
    .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 2) 0%, rgba(0, 0, 0, 0) 100%);
    pointer-events: none;
    }
    .des-info, .img-info {
        position: absolute;
        top: 50%;
        width: 40%;
        max-width: 600px;
        padding: 20px;
     
        border-radius: 10px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
        transform: translateY(-50%);
    }

    .des-info {
        left: 10%;
        text-align: left;
    }

    .img-info {
        right: 15%;
        text-align: right;
        top: 60%;
        
    }
    @media (max-width: 768px) {
        .des-info, .img-info {
            top:55%;
            width: 80%; /* Adjust as needed for mobile view */
            left: 35%;
            right: initial;
            transform: translateX(-50%) translateY(-50%);
            text-align: center;
        }
        .img-info{
            left: 80%;
        }

        .banner {
            height: auto; /* Change height to auto for mobile view */
        }
    }
    .img-3d-container {
  perspective: 1000px; /* Adjust the perspective value for the desired depth */
}

.img-3d {
  max-width: 100%;
  max-height: 100%;
  transform: rotateY(15deg) translateZ(50px); /* Adjust rotation and translation values for the 3D effect */
  transition: transform 0.3s ease-in-out;
}

.img-3d:hover {
  transform: rotateY(0) translateZ(0); /* Reset the transform on hover to remove the 3D effect */
}
