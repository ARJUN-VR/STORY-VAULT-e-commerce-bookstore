<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
      <% for (let i = 0; i < banner.length; i++) { %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" <%= i === 0 ? 'class="active"' : '' %>></li>
      <% } %>
    </ol>
    <div class="carousel-inner">
      <% banner.forEach((item, index) => { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <img class="d-block w-100 banner" src="images/backgrounds/<%= item.Image[0] %>" alt="Slide <%= index + 1 %>">
          <div class="gradient-overlay"></div>
          <div class="des-info">
            <p style="color: white; font-style: italic;"><%= item.description %></p>

          </div>
          <div class="img-info d-flex justify-content-center align-items-end pt-3" style="height: 60%; width: 30%;">
            <div class="d-flex justify-content-center align-items-center img-3d-container" style="width: 100%; height: 100%;">
              <img src="img/product/<%= item.productimg[0] %>" alt="" class="img-3d">
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
