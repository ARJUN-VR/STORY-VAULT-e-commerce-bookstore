<%-include('../layouts/headerforlogin.ejs')%>


  <title>Admin Login</title>
  <!-- Add Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mt-5">
        <h1>Admin Login</h1>
      </div>
    </div>
  </div>
</body>



<div class="container2 text-center">
    <form action="" method="post">
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="text" class="form-control custom-input" id="inputEmail" placeholder="Email" name="email">
        </div>
      </div><br><br>
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control custom-input" id="inputPassword" placeholder="Password" name="password"><br>
         
        </div>
      </div><br>
      <div class="form-group row">
        <div class="d-flex flex-column align-items-center">
          <button type="submit" class="btn btn-success" style="border-radius: 0; width: 100px;">Log in</button><br>
        
          <%=(typeof message!=='undefined') ? message : ""%>
       
        </div>
      </div>
    </form>
  </div>
  
  
  <style>
    .container2 {
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 70vh;
    }
    
    .custom-input {
      width: 300px;
      height: 50px;
      border-radius: 0;
      border-width: 3px;
      border-color: black;
    }
    
  </style>
  


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>


</body>
</html>